---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<section class="section">
  {title && <h3 class="title">{title}</h3>}
  <slot />
</section>

<style>
  .section {
    width: 67.3%;
    margin: 0 auto;

    @media (max-width: 720px) {
      width: 93%;
    }
  }

  .title {
    font-size: 16px;
    font-weight: 700;
    line-height: 20px;
    margin: 0 0 4px;
  }
</style>
