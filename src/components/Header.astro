---
import HeaderLink from "./HeaderLink.astro";
---

<header class="header">
  <HeaderLink to="/">main</HeaderLink>
  <span class="delimiter">/</span>
  <HeaderLink to="/projects/">projects</HeaderLink>
</header>

<style>
  .header {
    align-items: center;
    display: flex;
    gap: 8px;
    justify-content: center;
    margin-top: 24px;
    position: relative;
  }
  .delimiter {
    color: var(--text-secondary);
    user-select: none;
  }
</style>
